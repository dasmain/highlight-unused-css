{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "esbuild-watch",
      "type": "npm",
      "script": "watch:esbuild",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    }
  ]
}
